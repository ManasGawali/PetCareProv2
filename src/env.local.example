# Environment Variables for PetCare Pro Deluxe Frontend
# Copy this file to .env.local and update the values as needed

# Backend API Configuration
REACT_APP_API_URL=http://localhost:3001/api

# Application Info
REACT_APP_APP_NAME=PetCare Pro Deluxe
REACT_APP_APP_VERSION=1.0.0

# Development Features
REACT_APP_ENABLE_DEV_TOOLS=true
REACT_APP_ENABLE_API_LOGGING=true

# API Configuration
REACT_APP_API_TIMEOUT=10000

# Feature Flags (for future development)
REACT_APP_ENABLE_REAL_TIME=false
REACT_APP_ENABLE_PAYMENTS=false
REACT_APP_ENABLE_NOTIFICATIONS=false